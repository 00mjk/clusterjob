#!/bin/bash
if [ "$1" == "run" ];then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl run proclus myMatlabJob.m -dep ./ -m "test of CJ" -mem "10G"
elif [ "$1" == "help" ];then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl -help
elif [ "$1" == "clean" ];then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl clean 
elif [ "$1" == "get"  ]; then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl get Results.txt 
else 
echo "unknown action";
fi   

#!/bin/bash
if [ "$1" == "run" ];then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl  run sherlock myMatlabJob.m -dep ./ -m "test of CJ" -mem "10G"
elif [ "$1" == "help" ];then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl -help
elif [ "$1" == "history" ];then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl -h all
elif [ "$1" == "state" ];then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl state
elif [ "$1" == "clean" ];then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl clean 
elif [ "$1" == "save" ];then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl save "$2" 
elif [ "$1" == "get"  ]; then
perl /Users/hatef/github_projects/clusterjob/src/CJ.pl get Results.txt 
else 
echo "unknown action";
fi   
